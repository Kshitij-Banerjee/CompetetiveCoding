#include <iostream>
#include <set>
using namespace std;

class Solution {
public:
    int lengthOfLongestSubstring(string s) {

    	set<char> seen;

    	int count =0;
    	set<char>::iterator start,end = seen.begin();
    	for(auto c: s) {

    		if(seen.find(c) != seen.end()) {
    			end ++;
    		}
    		else{
    			count = max(distance(end-start), count);
    			while(*start != c) start++;
    		}
    	}
    	count = max(end-start, count);

    }
};
