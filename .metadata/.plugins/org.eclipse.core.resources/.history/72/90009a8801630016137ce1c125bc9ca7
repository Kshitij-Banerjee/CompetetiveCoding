#include <iostream>

using namespace std;

int main() {
	int count;
	cin >>count;

	string all;
	int day_max = 0;
	for(int i =0; i < count; i++){
		string s;
		cin >> s;

		int start = s.find("C");
		int end = start;
		while(s[end] == "C")end++;
		if(end -start > day_max) day_max = end-start;
		all += s;
	}

	cout << day_max << " ";

		int start = s.find("C");
		int end = start;
		while(s[end] == "C")end++;
}
