#include <iostream>
#include <set>
using namespace std;

class Solution {
public:
    int lengthOfLongestSubstring(string s) {

    	set<char> seen;

    	int count =0;
    	set<char>::iterator start,end = seen.begin();
    	for(auto c: s) {

    		if(seen.find(c) != seen.end()) {
    			end ++;
    		}
    		else{
    			int size = distance(start,end);
    			count = max(size, count);
    			while(*start != c) start++;
    			start++; //step over the last match
    		}
    	}

    	int size = distance(start,end);
    	count = max(size, count);
    	return count;
    }
};
